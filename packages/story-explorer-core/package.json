{
  "name": "@xala-technologies/story-explorer-core",
  "version": "1.0.0",
  "description": "Core utilities for Story Explorer - Storybook index parsing, hooks for favorites, approval workflow, and compositions",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./lib": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "tsup": "^8.0.1",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "storybook",
    "story-explorer",
    "components",
    "react"
  ],
  "author": "Xala Technologies",
  "license": "MIT"
}
