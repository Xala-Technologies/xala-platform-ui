{
  "name": "@xala-technologies/guardrails",
  "version": "0.1.0",
  "description": "Verification, validation, and governance tools for Xala Platform UI",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint/index.d.ts",
      "import": "./dist/eslint/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./compliance": {
      "types": "./dist/compliance/index.d.ts",
      "import": "./dist/compliance/index.js"
    },
    "./install": {
      "types": "./dist/install/index.d.ts",
      "import": "./dist/install/index.js"
    }
  },
  "bin": {
    "guardrails": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "xala",
    "guardrails",
    "verification",
    "validation",
    "design-tokens",
    "boundaries"
  ],
  "author": "Xala Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xala-Technologies/xala-platform-ui.git",
    "directory": "packages/guardrails"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "glob": "^10.3.10",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
