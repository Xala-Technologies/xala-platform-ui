{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "composite": false,
        "jsx": "react-jsx",
        "paths": {
            "@xala-technologies/platform-ui": [
                "../platform-ui/src"
            ],
            "@xala-technologies/platform-ui/*": [
                "../platform-ui/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}