{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "noEmit": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "composite": false,
        "baseUrl": ".",
        "paths": {
            "@xala-technologies/platform-ui-digilist": [
                "./src/index.ts"
            ],
            "@xala-technologies/platform-ui-digilist/*": [
                "./src/*"
            ],
            "@xala-technologies/platform-ui-core": [
                "../platform-ui-core/src/index.ts"
            ],
            "@xala-technologies/platform-ui-core/*": [
                "../platform-ui-core/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.tsx",
        "src/**/*.test.ts",
        "src/__tests__"
    ]
}