{
  "name": "@xala-technologies/platform-ui-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Xala Platform UI packages and tools",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @xala-technologies/platform-ui build",
    "build:all": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/*' build",
    "dev": "pnpm --filter @xala-technologies/platform-ui dev",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm --filter @xala-technologies/platform-ui typecheck",
    "lint": "pnpm --filter @xala-technologies/platform-ui lint",
    "lint:fix": "pnpm --filter @xala-technologies/platform-ui lint:fix",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "verify:boundaries": "pnpm --filter @xala-technologies/platform-ui verify:boundaries",
    "verify:design-tokens": "pnpm --filter @xala-technologies/platform-ui verify:design-tokens",
    "verify:all": "pnpm --filter @xala-technologies/platform-ui verify:all",
    "verify:specs": "npx design-workflow validate",
    "quality": "pnpm --filter @xala-technologies/platform-ui quality",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test:storybook": "test-storybook",
    "test:storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm storybook:build && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:127.0.0.1:6006 && pnpm test:storybook\"",
    "test:a11y": "pnpm test:storybook",
    "command-center": "pnpm --filter @xala-technologies/command-center dev",
    "playground": "pnpm --filter @xala-technologies/playground dev"
  },
  "keywords": [
    "xala",
    "xalatechnologies",
    "ui",
    "monorepo",
    "design-system"
  ],
  "author": "Xala Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xala-Technologies/xala-platform-ui.git"
  },
  "bugs": {
    "url": "https://github.com/Xala-Technologies/xala-platform-ui/issues"
  },
  "homepage": "https://github.com/Xala-Technologies/xala-platform-ui#readme",
  "devDependencies": {
    "@digdir/designsystemet-css": "^1.0.0",
    "@fontsource/inter": "^5.2.8",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-coverage": "^3.0.0",
    "@storybook/addon-docs": "^8.6.15",
    "@storybook/addon-essentials": "^8.6.15",
    "@storybook/addon-links": "^8.6.15",
    "@storybook/blocks": "^8.6.15",
    "@storybook/manager-api": "^8.6.15",
    "@storybook/react-vite": "^8.6.15",
    "@storybook/test-runner": "^0.24.2",
    "@storybook/theming": "^8.6.15",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vueless/storybook-dark-mode": "^10.0.6",
    "axe-playwright": "^2.2.2",
    "concurrently": "^9.2.1",
    "globals": "^17.1.0",
    "http-server": "^14.1.1",
    "playwright": "^1.57.0",
    "prettier": "^3.2.5",
    "storybook": "^8.6.15",
    "storybook-dark-mode": "^4.0.2",
    "vitest": "^1.2.0",
    "wait-on": "^9.0.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
