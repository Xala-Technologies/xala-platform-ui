    },
    {
      "id": "radio-option",
      "category": "forms",
      "htmlIntent": {
        "element": "<input type=\"radio\">",
        "attributes": {
          "type": "radio",
          "name": "group-name"
        },
        "description": "Single selection from mutually exclusive options"
      },
      "platformConstruct": {
        "component": "Radio.Group",
        "importPath": "@digdir/designsystemet-react",
        "defaultProps": {
          "data-size": "medium"
        }
      },
      "layer": "@digdir",
      "states": {
        "idle": {
          "component": "Radio.Group",
          "props": {}
        },
        "loading": {
          "component": "Skeleton",
          "props": { "height": "1.5rem", "width": "100%" }
        },
        "error": {
          "component": "Radio.Group",
          "props": { "error": "Please select an option" }
        }
      },
      "accessibility": {
        "role": "radiogroup",
        "ariaAttributes": {
          "aria-labelledby": "Group label reference"
        },
        "keyboardInteraction": ["Arrow keys to navigate", "Space to select", "Tab to move out"],
        "wcagCriteria": ["1.3.1 Info and Relationships", "4.1.2 Name, Role, Value"]
      },
      "i18n": {
        "pattern": "props",
        "translatableProps": ["legend", "error", "children (Radio labels)"]
      },
      "example": {
        "jsx": "<Radio.Group legend=\"Subscription Type\" data-size=\"medium\">\n  <Radio value=\"free\">Free</Radio>\n  <Radio value=\"pro\">Professional</Radio>\n  <Radio value=\"enterprise\">Enterprise</Radio>\n</Radio.Group>",
        "imports": [
          "import { Radio } from '@digdir/designsystemet-react';"
        ],
        "storybookPath": "?path=/story/forms-radio"
      },
      "tags": ["radio", "radiogroup", "single-select", "form", "choice"]
    },
    {
      "id": "button-action",
      "category": "forms",
      "htmlIntent": {
        "element": "<button>",
        "attributes": {
          "type": "button|submit|reset"
        },
        "description": "Interactive button for actions"
      },
      "platformConstruct": {
        "component": "Button",
        "importPath": "@digdir/designsystemet-react",
        "defaultProps": {
          "data-size": "medium"
        }
      },
      "layer": "@digdir",
      "states": {
        "idle": {
          "component": "Button",
          "props": {}
        },
        "loading": {
          "component": "Button",
          "props": { "loading": true }
        },
        "success": {
          "component": "Button",
          "props": { "data-color": "success" }
        }
      },
      "accessibility": {
        "role": "button",
        "ariaAttributes": {
          "aria-disabled": "true when disabled",
          "aria-busy": "true when loading"
        },
        "keyboardInteraction": ["Enter/Space to activate", "Tab to focus"],
        "wcagCriteria": ["2.1.1 Keyboard", "4.1.2 Name, Role, Value"]
      },
      "i18n": {
        "pattern": "children",
        "translatableProps": ["aria-label"]
      },
      "example": {
        "jsx": "<Button variant=\"primary\" data-size=\"medium\">\n  Submit\n</Button>\n\n<Button variant=\"secondary\" data-size=\"medium\">\n  Cancel\n</Button>\n\n<Button variant=\"tertiary\" data-size=\"medium\">\n  Learn More\n</Button>",
        "imports": [
          "import { Button } from '@digdir/designsystemet-react';"
        ],
        "storybookPath": "?path=/story/forms-button"
      },
      "tags": ["button", "action", "submit", "form", "interactive"]
    },
    {
      "id": "form-wrapper",
      "category": "forms",
      "htmlIntent": {
        "element": "<form>",
        "attributes": {
          "onsubmit": "...",
          "action": "..."
        },
        "description": "Form container with submit handling"
      },
      "platformConstruct": {
        "component": "FormLayout",
        "importPath": "@xala-technologies/platform-ui/composed",
        "defaultProps": {},
        "alternatives": [
          {
            "component": "FormSection",
            "importPath": "@xala-technologies/platform-ui/composed",
            "useCase": "For grouping related fields within a form"
          }
        ]
      },
      "layer": "composed",
      "states": {
        "idle": {
          "component": "FormLayout",
          "props": {}
        },
        "loading": {
          "component": "FormLayout",
          "props": { "isSubmitting": true }
        },
        "error": {
          "component": "FormLayout",
          "props": { "errors": "{ field: 'message' }" }
        },
        "success": {
          "component": "FormLayout",
          "props": { "successMessage": "Form submitted successfully" }
        }
      },
      "accessibility": {
        "role": "form",
        "ariaAttributes": {
          "aria-labelledby": "Form title reference"
        },
        "keyboardInteraction": ["Tab through fields", "Enter to submit"],
        "wcagCriteria": ["1.3.1 Info and Relationships", "3.3.1 Error Identification"]
      },
      "i18n": {
        "pattern": "props",
        "translatableProps": ["title", "submitLabel", "cancelLabel", "successMessage"]
      },
      "example": {
        "jsx": "<FormLayout\n  title=\"User Registration\"\n  onSubmit={handleSubmit}\n>\n  <FormSection title=\"Personal Information\">\n    <Textfield label=\"Name\" name=\"name\" />\n    <Textfield label=\"Email\" name=\"email\" type=\"email\" />\n  </FormSection>\n  <FormLayout.Actions>\n    <Button type=\"submit\">Register</Button>\n    <Button variant=\"secondary\" type=\"reset\">Reset</Button>\n  </FormLayout.Actions>\n</FormLayout>",
        "imports": [
          "import { FormLayout, FormSection } from '@xala-technologies/platform-ui/composed';",
          "import { Textfield, Button } from '@digdir/designsystemet-react';"
        ],
        "storybookPath": "?path=/story/composed-formlayout"
      },
      "tags": ["form", "layout", "validation", "submit", "container"]
    }
  ]
}
