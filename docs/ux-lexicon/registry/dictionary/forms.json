        "keyboardInteraction": ["Tab to focus", "Type to enter password"],
        "wcagCriteria": ["1.3.1 Info and Relationships", "3.3.2 Labels or Instructions"]
      },
      "i18n": {
        "pattern": "props",
        "translatableProps": ["label", "placeholder", "error", "description"]
      },
      "example": {
        "jsx": "<Textfield\n  type=\"password\"\n  label=\"Password\"\n  autoComplete=\"current-password\"\n  data-size=\"medium\"\n/>",
        "imports": [
          "import { Textfield } from '@digdir/designsystemet-react';"
        ],
        "storybookPath": "?path=/story/forms-textfield--password"
      },
      "tags": ["input", "password", "form", "security", "auth"]
    },
