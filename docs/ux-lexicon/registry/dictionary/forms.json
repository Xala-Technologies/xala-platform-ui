{
  "$schema": "../../schemas/dictionary-entry.schema.json",
  "category": "forms",
  "entries": [
    {
      "id": "input-text",
      "category": "forms",
      "htmlIntent": {
        "element": "<input type=\"text\">",
        "attributes": {
          "type": "text",
          "placeholder": "...",
          "required": "..."
        },
        "description": "Single-line text input field"
      },
      "platformConstruct": {
        "component": "Textfield",
        "importPath": "@digdir/designsystemet-react",
        "defaultProps": {
          "data-size": "medium"
        }
      },
      "layer": "@digdir",
      "states": {
        "idle": {
          "component": "Textfield",
          "props": {}
        },
        "loading": {
          "component": "Skeleton",
          "props": { "height": "2.5rem", "width": "100%" }
        },
        "error": {
          "component": "Textfield",
          "props": { "error": "Error message" }
        },
        "success": {
          "component": "Textfield",
          "props": { "data-color": "success" }
        }
      },
      "accessibility": {
        "role": "textbox",
        "ariaAttributes": {
          "aria-label": "When no visible label",
          "aria-describedby": "Reference to help text",
          "aria-invalid": "true when validation fails"
        },
        "keyboardInteraction": ["Tab to focus", "Type to enter text"],
        "wcagCriteria": ["1.3.1 Info and Relationships", "3.3.1 Error Identification", "3.3.2 Labels or Instructions"]
      },
      "i18n": {
        "pattern": "props",
        "translatableProps": ["label", "placeholder", "error", "description"]
      },
      "example": {
        "jsx": "<Textfield\n  label=\"Full Name\"\n  placeholder=\"Enter your name\"\n  data-size=\"medium\"\n/>",
        "imports": [
          "import { Textfield } from '@digdir/designsystemet-react';"
        ],
        "storybookPath": "?path=/story/forms-textfield"
      },
      "tags": ["input", "text", "textfield", "form", "string"]
    },
    {
