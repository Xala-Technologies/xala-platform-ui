        "loading": {
          "component": "Skeleton",
          "props": { "height": "2.5rem", "width": "100%" }
        },
        "error": {
          "component": "Textfield",
          "props": { "type": "password", "error": "Error message" }
        }
      },
      "accessibility": {
        "role": "textbox",
        "ariaAttributes": {
          "aria-label": "Password field description"
