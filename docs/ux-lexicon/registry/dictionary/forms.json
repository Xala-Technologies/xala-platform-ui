    {
      "id": "input-number",
      "category": "forms",
      "htmlIntent": {
        "element": "<input type=\"number\">",
        "attributes": {
          "type": "number",
          "min": "...",
          "max": "...",
          "step": "..."
        },
        "description": "Numeric input with increment/decrement controls"
      },
      "platformConstruct": {
        "component": "NumberInput",
        "importPath": "@xala-technologies/platform-ui/composed",
        "defaultProps": {
          "data-size": "medium"
        },
        "alternatives": [
          {
            "component": "Textfield",
            "importPath": "@digdir/designsystemet-react",
            "useCase": "When simple number input without controls is needed"
          }
        ]
      },
      "layer": "composed",
      "states": {
        "idle": {
          "component": "NumberInput",
          "props": {}
        },
        "loading": {
          "component": "Skeleton",
          "props": { "height": "2.5rem", "width": "8rem" }
        },
        "error": {
          "component": "NumberInput",
          "props": { "error": "Invalid number" }
        }
      },
      "accessibility": {
        "role": "spinbutton",
        "ariaAttributes": {
          "aria-valuemin": "Minimum value",
          "aria-valuemax": "Maximum value",
          "aria-valuenow": "Current value"
        },
        "keyboardInteraction": ["Arrow Up/Down to increment/decrement", "Tab to focus"],
        "wcagCriteria": ["1.3.1 Info and Relationships", "4.1.2 Name, Role, Value"]
      },
      "i18n": {
        "pattern": "props",
        "translatableProps": ["label", "error", "description"]
      },
      "example": {
        "jsx": "<NumberInput\n  label=\"Quantity\"\n  min={0}\n  max={100}\n  step={1}\n  defaultValue={1}\n  data-size=\"medium\"\n/>",
        "imports": [
          "import { NumberInput } from '@xala-technologies/platform-ui/composed';"
        ],
        "storybookPath": "?path=/story/composed-numberinput"
      },
      "tags": ["input", "number", "numeric", "spinbutton", "form"]
    },
    {
      "id": "select-dropdown",
      "category": "forms",
      "htmlIntent": {
        "element": "<select>",
        "attributes": {
          "multiple": "false"
        },
        "description": "Dropdown selection from predefined options"
      },
      "platformConstruct": {
        "component": "Select",
        "importPath": "@digdir/designsystemet-react",
        "defaultProps": {
          "data-size": "medium"
        },
        "alternatives": [
          {
            "component": "SearchableSelect",
            "importPath": "@xala-technologies/platform-ui/composed",
            "useCase": "When searching/filtering options is needed"
          },
          {
            "component": "Combobox",
            "importPath": "@digdir/designsystemet-react",
            "useCase": "When autocomplete functionality is needed"
          }
        ]
      },
      "layer": "@digdir",
      "states": {
        "idle": {
          "component": "Select",
          "props": {}
        },
        "loading": {
          "component": "Skeleton",
          "props": { "height": "2.5rem", "width": "100%" }
        },
        "error": {
          "component": "Select",
          "props": { "error": "Please select an option" }
        },
        "empty": {
          "component": "Select",
          "props": { "disabled": true, "placeholder": "No options available" }
        }
      },
      "accessibility": {
        "role": "combobox",
        "ariaAttributes": {
          "aria-expanded": "true when open",
          "aria-haspopup": "listbox"
        },
        "keyboardInteraction": ["Arrow Up/Down to navigate", "Enter to select", "Escape to close"],
        "wcagCriteria": ["1.3.1 Info and Relationships", "4.1.2 Name, Role, Value"]
      },
      "i18n": {
        "pattern": "props",
        "translatableProps": ["label", "placeholder", "error", "options[].label"]
      },
      "example": {
        "jsx": "<Select\n  label=\"Country\"\n  data-size=\"medium\"\n>\n  <Select.Option value=\"no\">Norway</Select.Option>\n  <Select.Option value=\"se\">Sweden</Select.Option>\n  <Select.Option value=\"dk\">Denmark</Select.Option>\n</Select>",
        "imports": [
          "import { Select } from '@digdir/designsystemet-react';"
        ],
        "storybookPath": "?path=/story/forms-select"
      },
      "tags": ["select", "dropdown", "options", "form", "choice"]
    },
