            "component": "Switch",
            "importPath": "@digdir/designsystemet-react",
            "useCase": "For settings that take immediate effect"
          }
        ]
      },
      "layer": "@digdir",
      "states": {
        "idle": {
          "component": "Checkbox",
          "props": {}
        },
