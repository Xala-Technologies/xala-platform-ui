    {
      "id": "checkbox-toggle",
      "category": "forms",
      "htmlIntent": {
        "element": "<input type=\"checkbox\">",
        "attributes": {
          "type": "checkbox",
          "checked": "..."
        },
        "description": "Binary toggle for on/off states"
      },
      "platformConstruct": {
        "component": "Checkbox",
        "importPath": "@digdir/designsystemet-react",
        "defaultProps": {
          "data-size": "medium"
        },
